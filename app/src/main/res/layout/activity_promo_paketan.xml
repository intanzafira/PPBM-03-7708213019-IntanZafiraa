<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PromoPaketanActivity">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:background="@color/orange"
            android:orientation="horizontal"
            android:id="@+id/layout1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Promo"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_marginTop="15sp"
                android:layout_marginLeft="150sp">

            </TextView>

            <Button
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:background="@drawable/keranjang"
                android:layout_marginLeft="100sp"
                android:layout_marginTop="15sp"
                android:id="@+id/belanjaan">

            </Button>


        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:background="@drawable/button1"
            android:layout_below="@+id/layout1"
            android:layout_marginTop="20dp"
            android:text="Harga Spesial"
            android:textSize="11dp"
            android:id="@+id/button1"
            android:layout_marginLeft="20dp">

        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:background="@drawable/button1"
            android:layout_below="@+id/layout1"
            android:layout_marginTop="20dp"
            android:text="Gratis Produk"
            android:textSize="11dp"
            android:id="@+id/button2"
            android:layout_toRightOf="@+id/button1"
            android:layout_marginLeft="10dp">

        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:background="@drawable/button2"
            android:layout_below="@+id/layout1"
            android:layout_marginTop="20dp"
            android:text="Paketan"
            android:textSize="11dp"
            android:id="@+id/button3"
            android:layout_toRightOf="@+id/button2"
            android:layout_marginLeft="10dp">

        </Button>

        <androidx.cardview.widget.CardView
            android:layout_width="160sp"
            android:layout_height="200sp"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/button1"
            android:id="@+id/stock1"
            >

            <ImageView
                android:layout_width="109dp"
                android:layout_height="109sp"
                android:src="@drawable/paket1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp">
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paket A"
                android:layout_marginTop="120sp"
                android:layout_marginLeft="25dp"
                android:textColor="@color/black"
                android:textSize="12dp">

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp 50.000"
                android:layout_marginTop="150sp"
                android:layout_marginLeft="25dp"
                android:textColor="@color/black"
                android:textSize="12dp">

            </TextView>
            <Button
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:background="@drawable/button"
                android:layout_marginTop="170sp"
                android:layout_marginLeft="30dp"
                android:text="+ belanja"
                android:textSize="7dp">
            </Button>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="160sp"
            android:layout_height="200sp"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/stock1"
            android:layout_below="@id/button3"
            android:layout_marginLeft="50sp"
            android:id="@+id/stock2"
            >

            <ImageView
                android:layout_width="109dp"
                android:layout_height="109sp"
                android:src="@drawable/paket2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp">
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paket B"
                android:layout_marginTop="120sp"
                android:layout_marginLeft="25dp"
                android:textColor="@color/black"
                android:textSize="12dp">

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp 70.000"
                android:layout_marginTop="150sp"
                android:layout_marginLeft="25dp"
                android:textColor="@color/black"
                android:textSize="12dp">

            </TextView>
            <Button
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:background="@drawable/button"
                android:layout_marginTop="170sp"
                android:layout_marginLeft="30dp"
                android:text="+ belanja"
                android:textSize="7dp">
            </Button>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="75sp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_marginVertical="785sp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/beranda2"
                    android:id="@+id/beranda">

                </Button>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Beranda"
                    android:textColor="@color/black">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/favorit"
                    android:id="@+id/favorit">

                </Button>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="Favorit"
                    android:textColor="@color/black">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="50sp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/scan">

                </Button>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:text="Scan"
                    android:textColor="@color/black">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="50sp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/promo2"
                    android:id="@+id/promo">

                </Button>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:text="promo"
                    android:textColor="@color/black">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="25sp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/akun"
                    android:id="@+id/profileakun">

                </Button>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="Akun"
                    android:textColor="@color/black">

                </TextView>

            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>




</ScrollView>