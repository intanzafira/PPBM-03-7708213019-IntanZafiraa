                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="20dp">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 Voucher"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="35sp"
                    android:textColor="@color/black">
                </TextView>



            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="60dp"
            android:id="@+id/spinner">

        </Spinner>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="78sp"
                android:layout_height="96sp"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                >

                <ImageView
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    android:src="@drawable/chitato"
                    android:layout_marginTop="10dp">
                </ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jajanan"
                    android:layout_marginTop="75sp"
                    android:layout_marginLeft="12dp"
                    android:textColor="@color/black">

                </TextView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="78sp"
                android:layout_height="96sp"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                >

                <ImageView
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    android:src="@drawable/pulpen"
                    android:layout_marginTop="10dp">
                </ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alat Tulis"
                    android:layout_marginTop="75sp"
                    android:layout_marginLeft="12dp"
                    android:textColor="@color/black">

                </TextView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="78sp"
                android:layout_height="96sp"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                >

                <ImageView
                    android:layout_width="76dp"
                    android:layout_height="73dp"
                    android:src="@drawable/minuman"
                    android:layout_marginTop="10dp">
                </ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Minuman"
                    android:layout_marginTop="75sp"
                    android:layout_marginLeft="12dp"
                    android:textColor="@color/black">

                </TextView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="78sp"
                android:layout_height="96sp"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                >

                <ImageView
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    android:src="@drawable/masker"
                    android:layout_marginTop="10dp">
                </ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lainnya"
                    android:layout_marginTop="75sp"
                    android:layout_marginLeft="12dp"
                    android:textColor="@color/black">

                </TextView>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:orientation="horizontal"
            android:background="@color/ijoterang"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:background="@color/ijogelap"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LAGI"
                    android:textColor="@color/white"
                    android:layout_marginHorizontal="30sp"
                    android:layout_marginTop="40sp"
